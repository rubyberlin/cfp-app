- if allow_review?(proposal)
  = form_for proposal,
      url: event_staff_proposal_path(event, proposal),
      html: { role: 'form', remote: true, class: 'w-100' } do |f|
    #autocomplete-options.d-none{ data: { review_tags: (event.review_tags | proposal.review_tags) } }
    .form-row.align-items-center
      .col.mt-2.tag-list
        = f.text_field :review_tags, { value: proposal.review_tags.join(','), tabindex: '-1' }
        = program_tracker
      .col-auto
        %button.btn.btn-outline-success.btn-sm{ type: 'submit', style: 'min-width: 2rem' }
          %span.fa.fa-check
        %button#cancel-tags-editing.btn.btn-outline-danger.btn-sm{ type: 'button', style: 'min-width: 2rem' }
          %span.fa.fa-remove
