.modal-content
  .modal-header
    %h3#config-modal-label.modal-title Edit Track
    %button.close{ type: 'button', data: { dismiss: 'modal' }, 'aria-label': 'Close' }
      %span{ 'aria-hidden': 'true' } &times;
  = simple_form_for [ event, :staff, @track ], remote: true do |f|
    .modal-body
      .errors
      = render partial: 'form', locals: {f: f}
